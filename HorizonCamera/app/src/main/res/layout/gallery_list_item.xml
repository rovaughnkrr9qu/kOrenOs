<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="133dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="133dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:maxLength="15"
                android:id="@+id/itemMainName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/space" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemFirstProperty"
                android:layout_below="@+id/itemMainName"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/space" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemSecondProperty"
                android:layout_below="@+id/itemFirstProperty"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/space" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemThirdProperty"
                android:layout_below="@+id/itemSecondProperty"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/space" />

            <Space
                android:id="@+id/space"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/itemImage" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                card_view:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/itemImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>